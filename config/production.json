{
  "title": "Orpheu API",
  "connection": {
    "port": 3500,
    "allow-cross-domain": true
  },
  "database": {
    "connectionString": "env-var"
  },
  "auth": {
    "require-auth": false,
    "require-admin": false,
    "jwt-private-key": "env-var"
  },
  "storage": {
    "enabled": true,
    "endpoint": "fra1.digitaloceanspaces.com",
    "key": "env-var",
    "secret": "env-var",
    "bucket": "orpheu",
    "content-folder": "content"
  },
  "communication": {
    "parse-request-body-if-multipart": true,
    "key-to-parse": "content"
  }
}
